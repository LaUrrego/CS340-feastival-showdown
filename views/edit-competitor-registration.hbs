    <div class="form-container">
    <h4>Edit Competitor Registration:</h4>
    <form id="edit-competitor-registration-form">
        <!-- Hidden input to hold the ID -->
        <input type="hidden" name="id" id="id" value="{{competitorReg.competitor_registration_id}}"> 

        <!-- Prepopulated with valid competitors to reduce errors -->
        <select id="competitor" name="competitor" required>
            <option value="" disabled selected hidden>Competitor</option>
            {{#each competitor}}
            <option value="{{this.ID}}"{{this.selected}}>{{this.Name}}</option>
            {{/each}}
        </select><span></span><br>

        <!-- Prepopulated with valid teams to reduce errors -->
        <select id="team" name="team" required>
            <option value="" disabled selected hidden>Team</option>
            {{#each team}}
            <option value="{{this.ID}}"{{this.selected}}>{{this.Team}}</option>
            {{/each}}
        </select><span></span><br>

        <!-- Prepopulated with valid years to reduce errors -->
        <select id="year" name="year" required>
            <option value="" disabled selected hidden>Year</option>
            {{#each eventYear}}
            <option value="{{this.ID}}"{{this.selected}}>{{this.Year}}</option>
            {{/each}}
        </select><span></span><br>

        <button type="submit">Update Competitor Registration</button>
    </form>
    </div>
    <div class="popup" id="success-popup">
        <h3 id="success-header">Success ✓</h3>
        <p>Competitor registration successfully edited!</p>
        <button type="button" id="success-button">OK</button>
    </div>
    <div class="popup" id="failure-popup">
        <h3 id="failure-header">Failure ✖</h3>
        <p id="error-msg"></p>
        <button type="button" id="failure-button">OK</button>
    </div>
</body>
