<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Feastival Showdown</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Feastival Showdown DB</h1>
    <div class="navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/attendees">Attendees</a></li>
            <li class="active"><a href="/ticket-sales">Ticket Sales</a></li>
            <li><a href="/competitors">Competitors</a></li>
            <li><a href="/teams">Teams</a></li>
            <li><a href="/competitor-registrations">Competitor Registrations</a></li>
            <li><a href="/dishes">Dishes</a></li>
            <li><a href="/ratings">Ratings</a></li>
            <li><a href="/event-years">Event Years</a></li>
        </ul>
    </div>
    <br>
    <h3>Browse Ticket Sales</h3>
    <div>
        <table>
            <thead>
                <tr>
                    <th><a href="/new-ticket-sale">New</a></th>
                    <th>Attendee</th>
                    <th>Ticket</th>
                    <th>Total</th>
                    <th>Year</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                {{!-- For each row, print the Name, Email, Phone in order --}}
                {{#each ticketSale}}
                <tr>
                    <td><a onclick="editTicketSale({{this.ID}})" href="/edit-ticket-sale">Edit</a></td>
                    <td>{{this.Attendee}}</td>
                    <td>{{this.Ticket}}</td>
                    <td>{{this.Total}}</td>
                    <td>{{this.Year}}</td>
                    <td><button onclick="deleteTicketSale({{this.ID}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <h3>Ticket Types</h3>
    <div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Ticket Type</th>
                    <th>List Price</th>
                </tr>
            </thead>
            <tbody>
                {{#each ticketType}}
                <tr>
                    <td><a onclick="editTicketType({{this.ID}})" href="/edit-ticket-type">Edit</a></td>
                    <td>{{this.Ticket}}</td>
                    <td>{{this.Price}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>