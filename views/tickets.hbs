<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Feastival Showdown</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Feastival Showdown DB</h1>
    <div class="navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/attendees">Attendees</a></li>
            <li class="active"><a href="/tickets">Tickets</a></li>
            <li><a href="/ticket-types">Ticket Types</a></li>
            <li><a href="/discounts">Discounts</a></li>
            <li><a href="/ticket-sales">Ticket Sales</a></li>
            <li><a href="/competitors">Competitors</a></li>
            <li><a href="/teams">Teams</a></li>
            <li><a href="/competitor-registrations">Competitor Registrations</a></li>
            <li><a href="/dishes">Dishes</a></li>
            <li><a href="/courses">Courses</a></li>
            <li><a href="/ratings">Ratings</a></li>
            <li><a href="/event-years">Event Years</a></li>
        </ul>
    </div>
    <br>
    <h3>Browse Tickets</h3>
    <div>
        {{!-- Create a table --}}
        <table id="ticket-table">
            {{!-- Header section --}}
            <thead>
                <tr>
                    <th><a href="/new-ticket" class="floating-button">New</a></th>
                    <th>Ticket</th>
                    <th>Price</th>
                    <th>Year</th>
                    <th></th>
                </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>

                {{!-- For each row, print the Name, Email, Phone in order --}}
                {{#each ticket}}
                <tr>
                    <td><a onclick="editTicket({{this.ID}})" href="/edit-ticket?id={{this.ID}}">Edit</a></td>
                    <td>{{this.Ticket}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Year}}</td>
                    <td><button onclick="deleteTicket({{this.ID}})">Delete</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>