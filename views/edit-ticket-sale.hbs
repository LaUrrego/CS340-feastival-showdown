    <div class="form-container">
    <h3>Edit Ticket Sale:</h3>
    <form id="edit-ticket-sale-form">
        <!--Hidden select for id-->
        <input type="hidden" name="id" id="id" value="{{ticketSale.ticket_sale_id}}"> 

        <!-- Dropdown for Attendee -->
        <select id="attendee" name="attendee">
            <!-- Taken from https://stackoverflow.com/questions/5805059/how-do-i-make-a-placeholder-for-a-select-box -->
            <option value="" disabled selected hidden>Attendee</option>
            {{#each attendee}}
            <option value="{{this.ID}}" {{this.selected}}>{{this.Name}}</option>
            {{/each}}
        </select><span></span><br>

        <!-- Dropdown for Ticket Type -->
        <select id="ticket" name="ticket" required>
            <!-- Taken from https://stackoverflow.com/questions/5805059/how-do-i-make-a-placeholder-for-a-select-box -->
            <option value="" disabled selected hidden>Ticket</option>
            {{#each ticket}}
            <option value="{{this.ID}}" {{this.selected}}>{{this.Ticket}} {{this.Year}}</option>
            {{/each}}
        </select><span></span><br>

        <!-- Input for Discount-->
        <select id="discount" name="discount">
            <option value="">None</option>
            {{#each discount}}
            <option value="{{this.ID}}" {{this.selected}}>{{this.Discount}}</option>
            {{/each}}
        </select><span></span><br>

    <button type="submit">Update Ticket Sale</button>
    </form>
    </div>

    <!-- Adapted from https://www.youtube.com/watch?v=AF6vGYIyV8M -->
    <div class="popup" id="success-popup">
        <h3 id="success-header">Success ✓</h3>
        <p>Ticket sale successfully edited!</p>
        <button type="button" id="success-button">OK</button>
    </div>
    <div class="popup" id="failure-popup">
        <h3 id="failure-header">Failure ✖</h3>
        <p id="error-msg"></p>
        <button type="button" id="failure-button">OK</button>
    </div>
